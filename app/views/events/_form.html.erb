<div class="col-lg-12">
  <%= form_with model: @event, data: { turbo: false } do |f| %>
    <%= render partial: "partials/form_errors", locals: { model: @event } %>

    <div class="form-group mt-3">
      <%= f.label :title, t("attributes.event.title"), class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :address, t("attributes.event.address"), class: "form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :datetime, t("attributes.event.datetime"), class: "form-label" %>
      <p><%= f.datetime_select :datetime, class: "form-control" %></p>
    </div>

    <div class="form-group mt-3">
      <%= f.label :description, t("attributes.event.description"), class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :pincode, class: "form-label" %>
      <%= f.text_field :pincode, class: "form-control" %>
    </div>

    <div class="actions buffer-bottom mt-3">
      <%= f.submit t("button.save"), class: "btn btn-primary" %>
      <%= t("link.or") %> <%= link_to t("link.back"), events_path %>
    </div>
  <% end %>
</div>
