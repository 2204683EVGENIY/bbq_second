<%= form_with model: @user, html: { multipart: true } do |form| %>
  
  <%= render partial: "partials/form_errors", locals: { model: @user } %>

  <div class="form-group mt-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions buffer-bottom mt-3">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %> или <%= link_to 'сменить пароль', edit_user_registration_path %>
  </p>
  </div>
<% end %>
