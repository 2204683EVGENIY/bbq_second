<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: "rounded-circle img-thumbnail img-fluid" %>

  <% if @user == current_user%>
    <div class="row">
      <div class="col-md-12">
        <%= button_to t("link.edit_profile"), edit_user_path(@user), method: :get, class: "btn btn-primary mt-3 mb-3" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t("users.user.events") %></h3>
        <div class="row">
          <%= render partial: "events/event", collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t("users.user.no_events") %></p>
      <% end %>
    </div>
  </div>
</div>
