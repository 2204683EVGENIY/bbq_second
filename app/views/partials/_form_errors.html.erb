<% errors = model.errors %>
<% if errors.any? %>
  <div class="alert alert-danger">
    <%= t("plural.error", count: errors.count) %>:

    <ol>
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ol>
    <div class="position-absolute top-0 end-0">
      <button type="button" class="btn-close btn-outline-secondary" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  </div>
<% end %>
