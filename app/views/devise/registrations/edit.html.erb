<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mt-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mt-3">
    <%= f.label :password %> <i>(Оставьте поле пустым если не хотите ничего менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :password_confirmation %><i> (Повторите свой новый пароль)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :current_password %> <i>(Введите текущий пароль)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions buffer-bottom mt-3">
    <%= f.submit "Обновить пароль", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= button_to "Удалить профиль", registration_path(resource_name), method: :delete, data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" },  class: "btn btn-danger mt-3 mb-3" %>

<%= link_to "Назад", :back, class: "btn-link mt-3" %>
