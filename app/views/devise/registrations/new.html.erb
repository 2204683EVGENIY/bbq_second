<h2><%= t("registrations.new") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: resource } %>

  <div class="form-group mt-3">
    <%= f.label :email %> <em class="form-text">(<%= t("registrations.email_protected") %>)</em><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("registrations.placeholder_email") %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em class="form-text">(<%= t("registrations.password_too_short")%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: t("registrations.placeholder_password") %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :password_confirmation %> <em class="form-text">(<%= t("registrations.need_to_confirm")%>)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("registrations.placeholder_password") %>
  </div>

  <div class="actions buffer-bottom mt-3">
    <%= f.submit t("registrations.new"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
