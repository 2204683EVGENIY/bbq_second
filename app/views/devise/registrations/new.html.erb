<h2>Зарегистрироваться</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: resource } %>

  <div class="form-group mt-3">
    <%= f.label :email %> <em class="form-text">(Все что Вы вводите на сайте остается на сайте)</em><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em class="form-text">(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "******" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :password_confirmation %> <em class="form-text">(Повторить здесь надо пароль)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "******" %>
  </div>

  <div class="actions buffer-bottom mt-3">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
