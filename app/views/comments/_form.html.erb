<%= form_for [@event, comment], data: { turbo: false } do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: comment } %>

  <div class="form-group mt-3">
    <%= f.label :body, t("activerecord.models.comment"), class: "form-label" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group mt-3">
      <%= f.label :user_name, t("activerecord.attributes.user.name"), class: "form-label" %>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions mt-3 mb-3">
    <%= f.submit t("button.comment"), class: "btn btn-primary" %>
  </div>
<% end %>
